<head>
    <meta charset="utf-8">
    <title>RAUDI - Détails de la voiture</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@600;700&family=Ubuntu:wght@400;500&display=swap"
        rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet">
</head>

<body>

        <!-- Navbar Start -->
        <nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
            <a href="index.html" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
                <h2 class="m-0 text-primary"><i class="fa fa-car me-3"></i>RAUDI</h2>
            </a>
            <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto p-4 p-lg-0">
                    <a href="index.html" class="nav-item nav-link active">Accueil</a>
                    <a href="login.html" class="nav-item nav-link">Connexion</a>
                    <a href="register.html" class="nav-item nav-link">S'enregistrer</a>
                    <a href="http://localhost:8000/admin" class="nav-item nav-link">admin</a>
                </div>
            </div>
        </nav>
        <!-- Navbar End -->

    <!-- Section des détails de la voiture -->
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <img src="../Vue/img/carousel-1.png" alt="Image de la voiture" class="img-fluid">
            </div>
            <div class="col-md-6">
                <h2><%= modele.nom %></h2>
                <p><strong>Prix :</strong> <%= modele.prixVoiture %></p>
                <p><strong>Moteur :</strong> <%= modele.Moteur %></p>
                <p><strong>Transmission :</strong> Automatique</p>
                <p><strong>Vitesse maximale :</strong> 150 km/h</p>
                <p><strong>Accélération (0-100 km/h) :</strong> 4,5 secondes</p>
                <p><strong>Consommation :</strong> <%= modele.Consomation %> </p>
                <button class="btn btn-danger">Ajouter des options</button>
                <!-- Ajoutez d'autres caractéristiques au besoin -->
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-md-12">
                <h3>Description</h3>
                <p><%= modele.Description %></p>
            </div>
        </div>
    </div>

    <!-- Scripts JavaScript et Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.7.0/dist/js/bootstrap.min.js"></script>
    <!-- Ajoutez d'autres scripts au besoin -->

</body>

</html>