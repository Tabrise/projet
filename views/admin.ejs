
<head>
    <meta charset="utf-8">
    <title>RAUDI - Page Admin</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@600;700&family=Ubuntu:wght@400;500&display=swap"
        rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
        <a href="index.html" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
            <h2 class="m-0 text-primary"><i class="fa fa-car me-3"></i>RAUDI</h2>
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                <a href="index.html" class="nav-item nav-link active">Accueil</a>
                <a href="login.html" class="nav-item nav-link">Connexion</a>
                <a href="http://localhost:8000/admin" class="nav-item nav-link">admin</a>
                <button href="http://localhost:8000/admin" class="btn btn-primary" type="submit">Admin</button>
            </div>
        </div>
    </nav>
    <!-- Navbar End -->

    <!-- Section du tableau des achats -->
    <div class="container mt-5">
        <h2>Liste des Achats</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom du Client</th>
                    <th scope="col">Modèle de Voiture</th>
                    <th scope="col">Prix</th>
                    <th scope="col">Date d'Achat</th>
                </tr>
            </thead>
            <tbody>
                    <% achats.forEach(achat => {%>
                        <tr>
                            <th scope="row"><%= achat.id %></th>
                            <td>John Doe</td>
                            <td>Modèle R1</td>
                            <td><%= achat.prix %></td>
                            <td><%= achat.dateAchat %></td>
                        </tr>
                    <% }); %>
                <!-- Ajoutez plus de lignes au besoin pour chaque achat -->
            </tbody>
        </table>
    </div>

    <!-- Section du tableau des gains du mois -->
    <div class="container mt-5">
        <h2>Gains du Mois</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Mois</th>
                    <th scope="col">Total des Gains</th>
                </tr>
            </thead>
            <tbody>
                <% mois.forEach(el =>{%>
                    <tr>
                        <td><%= el.dataValues.Mois %></td>
                        <td><%= el.dataValues.SommeTotalAchat %>€</td>
                    </tr>
                <%})%>
              
                <!-- Ajoutez plus de lignes au besoin pour chaque mois -->
            </tbody>
        </table>
    </div>


    <!-- Scripts JavaScript et Bootstrap JS -->
    <script src="js/admin.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.7.0/dist/js/bootstrap.min.js"></script>
    <!-- Ajoutez d'autres scripts au besoin -->

</body>

</html>