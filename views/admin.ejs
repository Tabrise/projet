<body>
    <!-- Section du tableau des achats -->
    <div class="container mt-5">
        <h2>Liste des Achats</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom du Client</th>
                    <th scope="col">Modèle de Voiture</th>
                    <th scope="col">Prix</th>
                    <th scope="col">Date d'Achat</th>
                </tr>
            </thead>
            <tbody>
                    <% achats.forEach(achat => {%>
                        <tr>
                            <th scope="row"><%= achat.id %></th>
                            <td>John Doe</td>
                            <td>Modèle R1</td>
                            <td><%= achat.prix %></td>
                            <td><%= achat.dateAchat %></td>
                        </tr>
                    <% }); %>
                <!-- Ajoutez plus de lignes au besoin pour chaque achat -->
            </tbody>
        </table>
    </div>

    <!-- Section du tableau des gains du mois -->
    <div class="container mt-5">
        <h2>Gains du Mois</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Mois</th>
                    <th scope="col">Total des Gains</th>
                </tr>
            </thead>
            <tbody>
                <% mois.forEach(el =>{%>
                    <tr>
                        <td><%= el.dataValues.Mois %></td>
                        <td><%= el.dataValues.SommeTotalAchat %>€</td>
                    </tr>
                <%})%>
              
                <!-- Ajoutez plus de lignes au besoin pour chaque mois -->
            </tbody>
        </table>
    </div>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2>Ajouter un modèle</h2>
                <form method="post" action="/modele/create">
                    <div class="mb-3">
                        <label for="text" class="form-label">Nom:</label>
                        <input type="text" id="nom" class="form-control" name="nom" placeholder="nom" required>
                    </div>
                    <div class="mb-3">
                        <label for="number" class="form-label">Prix</label>
                        <input type="number" name="prixVoiture" class="form-control" id="prixVoiture" placeholder="Prix">
                    </div>
                    <div class="mb-3">
                        <label for="text" class="form-label">Moteur :</label>
                        <input type="text" name="Moteur" class="form-control" id="Moteur" placeholder="Moteur">
                    </div>
                    <div class="mb-3">
                        <label for="text" class="form-label">Consomation :</label>
                        <input type="text" name="Consomation" class="form-control" id="Consomation" placeholder="Consomation">
                    </div>
                    <div class="mb-3">
                        <label for="text" class="form-label">Description :</label>
                        <input type="text" name="Description" class="form-control" id="Description" placeholder="Descrption">
                    </div>
                    <button type="submit" class="btn btn-primary">Ajouter modèle</button>
                </form>
            </div>
        </div>
    </div>


    <!-- Scripts JavaScript et Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.7.0/dist/js/bootstrap.min.js"></script>
    <!-- Ajoutez d'autres scripts au besoin -->

</body>

</html>